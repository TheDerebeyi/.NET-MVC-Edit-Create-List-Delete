@model IEnumerable<w5_2.Models.Ogrenci>

@{
    ViewData["Title"] = "Listele";
}

<h1>Listele</h1>

<p>
    <a asp-action="Kayit">Yeni Kayıt Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OgrAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OgrSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OgrNumara)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OgrYas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OgrAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OgrSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OgrNumara)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OgrYas)
            </td>
            <td>
                    @Html.ActionLink("Düzenle", "Duzenle", new { id=item.OgrNumara }) |
                    @Html.ActionLink("Sil", "Sil", new { id=item.OgrNumara })
            </td>
        </tr>
}
    </tbody>
</table>
